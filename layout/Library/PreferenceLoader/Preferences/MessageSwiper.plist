<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>id</key>
    <string>com.apple.preferences.touch</string>
    <!-- main tab  -->
    <key>entry</key>
    <dict>
        <key>cell</key>
        <string>PSLinkCell</string>
              <key>icon</key>
        <string>MessageSwiperIcon.png</string>
        <key>label</key>
        <string>MessageSwiper</string>
    </dict>
    <!-- all the stuff inside of the setting menu -->
    <key>items</key>
    <array>
        <!-- global on/off switch -->
    <dict>
        <key>cell</key>
        <string>PSGroupCell</string>
        <key>footerText</key>
        <string>Please Respring for Changes To Take Effect.</string>
    </dict>
    <dict>
        <key>cell</key>
        <string>PSSwitchCell</string>
        <key>default</key>
        <true/>
        <key>defaults</key>
        <string>com.mattcmultimedia.messageswiper</string>
        <key>key</key>
        <string>globalEnable</string>
        <key>label</key>
        <string>Enable MessageSwiper</string>
    </dict>



    <dict>
        <key>cell</key>
        <string>PSGroupCell</string>
        <key>footerText</key>
        <string>Enable to use all settings below.</string>
    </dict>

    <!-- custom swipe setting enabler -->
    <dict>
        <key>cell</key>
        <string>PSSwitchCell</string>
        <key>default</key>
        <false/>
        <key>defaults</key>
        <string>com.mattcmultimedia.messageswiper</string>
        <key>key</key>
        <string>customSwipeSettings</string>
        <key>label</key>
        <string>Custom Swipe Settings?</string>

    </dict>

    <dict>
        <key>cell</key>
        <string>PSGroupCell</string>
        <key>footerText</key>
        <string>Known Bug: Flip Switch Directions does not switch the side that the preview animation appears on. The preview text is correct, though.</string>
    </dict>
    <!-- reverse swipe direction -->
    <dict>
        <key>cell</key>
        <string>PSSwitchCell</string>
        <key>default</key>
        <false/>
        <key>defaults</key>
        <string>com.mattcmultimedia.messageswiper</string>
        <key>key</key>
        <string>switchShortSwipeDirections</string>
        <key>label</key>
        <string>Flip Swipe Directions?</string>
    </dict>

    <!-- wrap around -->
    <dict>
        <key>cell</key>
        <string>PSSwitchCell</string>
        <key>default</key>
        <false/>
        <key>defaults</key>
        <string>com.mattcmultimedia.messageswiper</string>
        <key>key</key>
        <string>wrapAroundEnabled</string>
        <key>label</key>
        <string>Enable Wrap Around?</string>
    </dict>

    <!-- enable long swipes -->
    <dict>
        <key>cell</key>
        <string>PSSwitchCell</string>
        <key>default</key>
        <true/>
        <key>defaults</key>
        <string>com.mattcmultimedia.messageswiper</string>
        <key>key</key>
        <string>longSwipesEnabled</string>
        <key>label</key>
        <string>Enable Long Swipes?</string>
    </dict>

    <!-- enable animations -->

    <dict>
        <key>cell</key>
        <string>PSSwitchCell</string>
        <key>default</key>
        <true/>
        <key>defaults</key>
        <string>com.mattcmultimedia.messageswiper</string>
        <key>key</key>
        <string>enableAnimations</string>
        <key>label</key>
        <string>Enable Animations?</string>
    </dict>
    <!-- show/hide back button -->
    <dict>
        <key>cell</key>
        <string>PSSwitchCell</string>
        <key>default</key>
        <false/>
        <key>defaults</key>
        <string>com.mattcmultimedia.messageswiper</string>
        <key>key</key>
        <string>hideBackButton</string>
        <key>label</key>
        <string>Hide Back Button?</string>
    </dict>

    <!-- custom swipe distance group -->
    <dict>
        <key>cell</key>
        <string>PSGroupCell</string>
    </dict>

    <dict>
        <key>cell</key>
        <string>PSTitleValueCell</string>
        <key>label</key>
        <string>Short Swipe Distance (in points):</string>
    </dict>
    <!-- short Swipe Dist cell -->
    <dict>
        <key>cell</key>
        <string>PSSliderCell</string>
        <key>default</key>
        <real>40</real>
        <key>defaults</key>
        <string>com.mattcmultimedia.messageswiper</string>
        <key>min</key>
        <real>20</real>
        <key>max</key>
        <real>150</real>
        <key>showValue</key>
        <true/>
        <key>alternateColors</key>
        <true/>
        <key>key</key>
        <string>shortSwipeDistance</string>
    </dict>

    <!-- group for long swpie distance -->
    <dict>
        <key>cell</key>
        <string>PSGroupCell</string>
    </dict>

    <dict>
        <key>cell</key>
        <string>PSTitleValueCell</string>
        <key>label</key>
        <string>Long Swipe Distance (in points):</string>
    </dict>
    <!-- long Swipe Dist cell -->
    <dict>
        <key>cell</key>
        <string>PSSliderCell</string>
        <key>default</key>
        <real>220</real>
        <key>defaults</key>
        <string>com.mattcmultimedia.messageswiper</string>
        <key>min</key>
        <real>200</real>
        <key>max</key>
        <real>320</real>
        <key>showValue</key>
        <true/>
        <key>alternateColors</key>
        <true/>
        <key>key</key>
        <string>longSwipeDistance</string>
    </dict>

<!-- footer -->
    <dict>
        <key>cell</key>
        <string>PSGroupCell</string>
        <key>isStaticText</key>
        <true/>
        <key>footerText</key>
        <string>MattCMultimedia, AKA Shrugs
If you'd like to donate towards this tweak, I would certainly appreciate it!
Paypal/Email:
MattCMultimedia@gmail.com</string>
    </dict>
    <dict>
        <key>cell</key>
        <string>PSTitleValueCell</string>
        <key>label</key>
        <string>Message Swiper v3.0</string>
    </dict>

    </array>
    <key>title</key>
    <string>Message Swiper</string>
</dict>
</plist>